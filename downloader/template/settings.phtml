<script type="text/javascript">
function useCustomPermissions (element)
{
    if (element.value == '1') {
        disabledMode = 'block';
    } else {
        disabledMode = 'none';
    }
    document.getElementById('use_custom_permissions_mode_panel').style.display = disabledMode;
}
function changeDeploymentType (element)
{

<config>
    <modules>
        <Mage_Media>
            <version>1.6.0.0</version>
        </Mage_Media>
    </modules>
    <global>
        <models>
            <media>
                <class>Mage_Media_Model</class>
                <resourceModel>media_resource</resourceModel>
            </media>
            <media_resource>
                <class>Mage_Media_Model_File</class>
                <deprecatedNode>media_file</deprecatedNode>
            </media_resource>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Media>
                    <files>
                        <default>Mage_Media.csv</default>
                    </files>
                </Mage_Media>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <media>
                <use>standard</use>
                <args>
                    <module>Mage_Media</module>
                    <frontName>media</frontName>
                </args>
            </media>
        </routers>
        <translate>
            <modules>
                <Mage_Media>
                    <files>
                        <default>Mage_Media.csv</default>
                    </files>
                </Mage_Media>
            </modules>
        </translate>
    </frontend>
</config>

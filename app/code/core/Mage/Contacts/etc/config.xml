<config>
    <modules>
        <Mage_Contacts>
            <version>0.8.0</version>
        </Mage_Contacts>
    </modules>
    <frontend>
        <routers>
            <contacts>
                <use>standard</use>
                <args>
                    <module>Mage_Contacts</module>
                    <frontName>contacts</frontName>
                </args>
            </contacts>
        </routers>
        <translate>
            <modules>
                <Mage_Contacts>
                    <files>
                        <default>Mage_Contacts.csv</default>
                    </files>
                </Mage_Contacts>
            </modules>
        </translate>
        <layout>
            <updates>
                <contact>
                    <file>contacts.xml</file>
                </contact>
            </updates>
        </layout>
    </frontend>
    <global>
        <resources>
            <contacts_setup>
                <setup>
                    <module>Mage_Contacts</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </contacts_setup>
        </resources>
        <template>
            <email>
                <contacts_email_email_template translate="label" module="contacts">
                    <label>Contact Form</label>
                    <file>contact_form.html</file>
                    <type>text</type>
                </contacts_email_email_template>
            </email>
        </template>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Mage_Contacts>
                    <files>
                        <default>Mage_Contacts.csv</default>
                    </files>
                </Mage_Contacts>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <contacts>
                                            <title>Contacts Section</title>
                                        </contacts>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <contacts>
            <contacts>
                <enabled>1</enabled>
            </contacts>
            <email>
                <recipient_email><![CDATA[hello@example.com]]></recipient_email>
                <sender_email_identity>custom2</sender_email_identity>
                <email_template>contacts_email_email_template</email_template>
            </email>
        </contacts>
    </default>
</config>

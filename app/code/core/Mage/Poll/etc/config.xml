<config>
    <modules>
        <Mage_Poll>
            <version>0.7.2</version>
        </Mage_Poll>
    </modules>
    <frontend>
        <routers>
            <poll>
                <use>standard</use>
                <args>
                    <module>Mage_Poll</module>
                    <frontName>poll</frontName>
                </args>
            </poll>
        </routers>
        <translate>
            <modules>
                <Mage_Poll>
                    <files>
                        <default>Mage_Poll.csv</default>
                    </files>
                </Mage_Poll>
            </modules>
        </translate>
        <layout>
            <updates>
                <poll>
                    <file>poll.xml</file>
                </poll>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Mage_Poll>
                    <files>
                        <default>Mage_Poll.csv</default>
                    </files>
                </Mage_Poll>
            </modules>
        </translate>
    </adminhtml>

    <global>
        <models>
            <poll>
                <class>Mage_Poll_Model</class>
                <resourceModel>poll_mysql4</resourceModel>
            </poll>
            <poll_mysql4>
                <class>Mage_Poll_Model_Mysql4</class>
                <entities>
                    <poll>
                        <table>poll</table>
                    </poll>
                    <poll_answer>
                        <table>poll_answer</table>
                    </poll_answer>
                    <poll_vote>
                        <table>poll_vote</table>
                    </poll_vote>
                    <poll_store>
                        <table>poll_store</table>
                    </poll_store>
                </entities>
            </poll_mysql4>
        </models>
        <resources>
            <poll_setup>
                <setup>
                    <module>Mage_Poll</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </poll_setup>
            <poll_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </poll_write>
            <poll_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </poll_read>
        </resources>
        <blocks>
            <poll>
                <class>Mage_Poll_Block</class>
            </poll>
        </blocks>
    </global>
</config>

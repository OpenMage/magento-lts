<config>
    <modules>
        <Mage_Poll>
            <version>1.6.0.1</version>
        </Mage_Poll>
    </modules>
    <frontend>
        <routers>
            <poll>
                <use>standard</use>
                <args>
                    <module>Mage_Poll</module>
                    <frontName>poll</frontName>
                </args>
            </poll>
        </routers>
        <translate>
            <modules>
                <Mage_Poll>
                    <files>
                        <default>Mage_Poll.csv</default>
                    </files>
                </Mage_Poll>
            </modules>
        </translate>
        <layout>
            <updates>
                <poll>
                    <file>poll.xml</file>
                </poll>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Poll>
                    <files>
                        <default>Mage_Poll.csv</default>
                    </files>
                </Mage_Poll>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <models>
            <poll>
                <class>Mage_Poll_Model</class>
                <resourceModel>poll_resource</resourceModel>
            </poll>
            <poll_resource>
                <class>Mage_Poll_Model_Resource</class>
                <deprecatedNode>poll_mysql4</deprecatedNode>
                <entities>
                    <poll>
                        <table>poll</table>
                    </poll>
                    <poll_answer>
                        <table>poll_answer</table>
                    </poll_answer>
                    <poll_vote>
                        <table>poll_vote</table>
                    </poll_vote>
                    <poll_store>
                        <table>poll_store</table>
                    </poll_store>
                </entities>
            </poll_resource>
        </models>
        <resources>
            <poll_setup>
                <setup>
                    <module>Mage_Poll</module>
                </setup>
            </poll_setup>
        </resources>
        <blocks>
            <poll>
                <class>Mage_Poll_Block</class>
            </poll>
        </blocks>
    </global>
</config>

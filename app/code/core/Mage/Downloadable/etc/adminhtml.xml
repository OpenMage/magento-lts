    <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <downloadable translate="title" module="downloadable">
                                        <title>Downloadable Product Section</title>
                                    </downloadable>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    <menu>
        <report>
            <children>
                <products>
                    <children>
                        <downloads translate="title" module="reports">
                            <title>Downloads</title>
                            <action>adminhtml/report_product/downloads</action>
                        </downloads>
                    </children>
                </products>
            </children>
        </report>
    </menu>

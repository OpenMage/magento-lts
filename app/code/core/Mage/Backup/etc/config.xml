<config>
    <modules>
        <Mage_Backup>
            <version>1.6.0.0</version>
        </Mage_Backup>
    </modules>
    <global>
        <models>
            <backup>
                <class>Mage_Backup_Model</class>
                <resourceModel>backup_resource</resourceModel>
            </backup>
            <backup_resource>
                <class>Mage_Backup_Model_Resource</class>
                <deprecatedNode>backup_mysql4</deprecatedNode>
            </backup_resource>
        </models>
        <resources>
            <backup_setup>
                <setup>
                    <module>Mage_Backup</module>
                </setup>
            </backup_setup>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Backup>
                    <files>
                        <default>Mage_Backup.csv</default>
                    </files>
                </Mage_Backup>
            </modules>
        </translate>
    </adminhtml>
    <crontab>
        <jobs>
            <system_backup>
                <run>
                    <model>backup/observer::scheduledBackup</model>
                </run>
            </system_backup>
        </jobs>
    </crontab>
</config>

<config>
    <modules>
        <Mage_Dataflow>
            <version>0.7.4</version>
        </Mage_Dataflow>
    </modules>
    <global>
        <models>
            <dataflow>
                <class>Mage_Dataflow_Model</class>
                <resourceModel>dataflow_mysql4</resourceModel>
            </dataflow>
            <dataflow_mysql4>
                <class>Mage_Dataflow_Model_Mysql4</class>
                <entities>
                    <session>
                        <table>dataflow_session</table>
                    </session>
                    <import>
                        <table>dataflow_import_data</table>
                    </import>
                    <profile>
                        <table>dataflow_profile</table>
                    </profile>
                    <profile_history>
                        <table>dataflow_profile_history</table>
                    </profile_history>
                    <batch>
                        <table>dataflow_batch</table>
                    </batch>
                    <batch_export>
                        <table>dataflow_batch_export</table>
                    </batch_export>
                    <batch_import>
                        <table>dataflow_batch_import</table>
                    </batch_import>
                </entities>
            </dataflow_mysql4>
        </models>
        <resources>
            <dataflow_setup>
                <setup>
                    <module>Mage_Dataflow</module>
                </setup>
            </dataflow_setup>
        </resources>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <dataflow>
                    <file>dataflow.xml</file>
                </dataflow>
            </updates>
        </layout>
    </adminhtml>
</config>

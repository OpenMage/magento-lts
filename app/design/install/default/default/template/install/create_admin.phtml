 <legend><?php echo $this->__('Personal Information') ?></legend>
    <h4 class="legend"><?php echo $this->__('Personal Information') ?></h4>
    <ul>
        <li>
            <div class="input-box">
                <label for="firstname"><?php echo $this->__('First Name') ?> <span class="required">*</span></label><br/>

<?php $_item = $this->getItem()?>
<tr>
    <td>
        <?php echo $this->htmlEscape($this->getProductName()) ?>
        <?php if ($_attributes = $this->getProductAttributes()) :?>
        <ul class="super-product-attributes">
            <?php foreach ($_attributes as $_attribute):?>
            <li>
                <strong><?php echo $this->htmlEscape($_attribute['label']) ?>:</strong> <?php echo $this->htmlEscape($_attribute['value']) ?>
            </li>
            <?php endforeach;?>
        </ul>
        <?php endif;?>
        <?php if ($_options = $this->getProductOptions()): ?>
        <ul class="super-product-attributes">
            <?php foreach ($_options as $_option): ?>
            <li><strong><?php echo $this->htmlEscape($_option['label']) ?>:</strong> <?php echo $this->htmlEscape($_option['value']) ?>
            <?php endforeach; ?>
        </ul>
        <?php endif; ?>
    </td>
    <?php if ($this->helper('tax')->displayCartPriceExclTax() || $this->helper('tax')->displayCartBothPrices()): ?>
    <td class="a-right"><?php echo $this->helper('checkout')->formatPrice($_item->getCalculationPrice()) ?></td>
    <?php endif; ?>
    <?php if ($this->helper('tax')->displayCartPriceInclTax() || $this->helper('tax')->displayCartBothPrices()): ?>
    <td class="a-right"><?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getPriceInclTax($_item)); ?></td>
    <?php endif; ?>
    <td class="a-center"><?php echo $_item->getQty() ?></td>
    <?php if ($this->helper('tax')->displayCartPriceExclTax() || $this->helper('tax')->displayCartBothPrices()): ?>
    <td class="a-right"><?php echo $this->helper('checkout')->formatPrice($_item->getRowTotal()) ?></td>
    <?php endif; ?>
    <?php if ($this->helper('tax')->displayCartPriceInclTax() || $this->helper('tax')->displayCartBothPrices()): ?>
    <td class="a-right"><?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getSubtotalInclTax($_item)); ?></td>
    <?php endif; ?>
</tr>

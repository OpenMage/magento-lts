    <form id="discount-coupon-form" action="<?php echo $this->getUrl('checkout/cart/couponPost') ?>" method="post">
    <fieldset class="cart-coupon-block">
    <h4><?php echo $this->__('Discount Codes') ?></h4>
    <div style="margin-left:240px;">
        <input type="hidden" name="remove" id="remove-coupone" value="0"/>
    <?php if(!strlen($this->getCouponCode())): ?>
        <label for="coupon_code"><?php echo $this->__('Enter your coupon code if you have one.') ?></label>
        <input class="input-text" id="coupon_code" name="coupon_code" value="<?php echo $this->htmlEscape($this->getCouponCode()) ?>"/> &nbsp;<input type="image" name="do" src="<?php echo $this->getSkinUrl('images/btn_cart_apply.gif') ?>" alt="<?php echo $this->__('Apply Coupon') ?>"/>
    <?php else: ?>
        <input class="input-text" id="coupon_code" name="coupon_code" value="<?php echo $this->htmlEscape($this->getCouponCode()) ?>"/>&nbsp;<a href="#" onclick="discountForm.submit(true)"><img src="<?php echo $this->getSkinUrl('images/btn_cart_cancel.gif') ?>" alt="<?php echo $this->__('Cancel Coupon') ?>" style="vertical-align:middle;" /></a><?php endif;?>
    </div>
    </fieldset>
</form>
<script type="text/javascript">
var discountForm = new VarienForm('discount-coupon-form');
discountForm.submit = function (isRemove) {
    if (isRemove) {
        $('coupon_code').removeClassName('required-entry');
        $('remove-coupone').value = "1";
    } else {
        $('coupon_code').addClassName('required-entry');
        $('remove-coupone').value = "0";
    }
    return VarienForm.prototype.submit.bind(discountForm)();
}
</script>

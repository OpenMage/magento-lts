/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()): ?>
<div class="cross-sell-block">
    <p><strong><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></strong></p>
    <ul class="generic-product-list">
    <?php $count=1; ?>
    <?php foreach ($this->getItems() as $_item): ?>
        <li<?php if($count==count($this->getItems())):?> class="last"<?php endif?>>
            <a href="<?php echo $_item->getProductUrl() ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(50); ?>"  alt="<?php echo $this->htmlEscape($_item->getName()) ?>" class="product-image"/></a>
            <div class="product-shop">
                <h6><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a></h6>
                <?php echo $this->getPriceHtml($_item, true) ?>
                <a href="<?php echo $this->getAddToCartUrl($_item) ?>"><img src="<?php echo $this->getSkinUrl('images/btn_add_to_cart_sm.gif') ?>" alt="<?php echo $this->__('Add to Cart') ?>"/></a>
                <?php if ($this->helper('wishlist')->isAllow()) : ?><br/>
                <a href="<?php echo $this->getAddToWishlistUrl($_item) ?>" class="link-base"><?php echo $this->__('Add to Wishlist') ?></a>
                <?php endif; ?>
                <?php if($_compareUrl=$this->getAddToCompareUrl($_item)): ?><br/>
                <a href="<?php echo $_compareUrl ?>" class="link-base"><?php echo $this->__('Add to Compare') ?></a>
                <?php endif; ?>
            </div>
        </li>
    <?php $count++; ?>
    <?php endforeach; ?>
    </ul>
</div>
<?php else: ?>
<div class="cross-sell-blank">
<p><img src="<?php echo $this->getSkinUrl('images/media/callout1.jpg');?>" alt=""/></p>
<p><img src="<?php echo $this->getSkinUrl('images/media/fpo_no_crosssell.gif');?>" alt=""/></p>
</div>
<?php endif; ?>

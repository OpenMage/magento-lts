        <select
            id="<?php echo $this->getFieldId('prefix')?>"
            name="<?php echo $this->getFieldName('prefix')?>"
            title="<?php echo $this->__('Prefix') ?>"
            <?php if ($this->isPrefixRequired()):?>class="required-entry"<?php endif ?>
            <?php echo $this->getFieldParams() ?> />

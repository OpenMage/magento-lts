            value="<?php echo $this->htmlEscape($this->getObject()->getPrefix()) ?>"
            title="<?php echo $this->__('Prefix') ?>"
            class="<?php if ($this->isPrefixRequired()):?>required-entry<?php endif ?> input-text"
            <?php echo $this->getFieldParams() ?> />

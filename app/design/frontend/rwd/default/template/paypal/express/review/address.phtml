        OrderReviewController.prototype._copyElementValue_parent(el);

        var newId = el.id.replace('shipping:','billing:');
        if (newId && $(newId) && $(newId).type != 'hidden') {
            if ($(newId).up('.field')) {
                $(newId).up('.field').addClassName('inactive');
            }
        }

/**
 * @var $this Mage_Usa_Block_Adminhtml_Dhl_Unitofmeasure
 */
?>
<script type="text/javascript">
    //<![CDATA[
    function changeDimensions()
    {
        var dimensionUnit = '(<?= $this->getInch() ?>)';
        var dhlintUnitOfMeasureNote = '<?= $this->getDivideOrderWeightNoteLbp() ?>';
        if ($("carriers_dhlint_unit_of_measure").value == "K") {
            dimensionUnit = '(<?= $this->getCm() ?>)';
            dhlintUnitOfMeasureNote = '<?= $this->getDivideOrderWeightNoteKg() ?>';
        }
        $$('[for="carriers_dhlint_height"]')[0].innerHTML = '<?= $this->getHeight() ?> ' + dimensionUnit;
        $$('[for="carriers_dhlint_depth"]')[0].innerHTML = '<?= $this->getDepth() ?> ' + dimensionUnit;
        $$('[for="carriers_dhlint_width"]')[0].innerHTML = '<?= $this->getWidth() ?> ' + dimensionUnit;

        $('carriers_dhlint_divide_order_weight').next().down().innerHTML = dhlintUnitOfMeasureNote;
    }
    document.observe("dom:loaded", function() {
        $("carriers_dhlint_unit_of_measure").observe("change", changeDimensions);
        changeDimensions();
    });
    //]]>
</script>

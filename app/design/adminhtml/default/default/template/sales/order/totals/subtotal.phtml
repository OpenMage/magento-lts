    $_source  = $this->getSource();
    $_order   = $this->getOrder();
    $this->setPriceDataObject($_source);
?>
<?php if ($this->helper('tax')->displaySalesSubtotalBoth($_order->getStore())): ?>
    <tr>
        <td class="label">
            <?php echo Mage::helper('tax')->__('Subtotal (Excl. Tax)')?>
        </td>
        <td><?php echo $this->displaySubtotalExclTax() ?></td>
    </tr>
    <tr>
        <td class="label">
            <?php echo Mage::helper('tax')->__('Subtotal (Incl. Tax)')?>
        </td>
        <td><?php echo $this->displaySubtotalInclTax() ?></td>
    </tr>

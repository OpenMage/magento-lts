<?php $_items = $this->getItems(); ?>
<?php if($this->helper('giftmessage/message')->getIsMessagesAvailable('main', $this->getQuote(), $this->getStoreId()) || $_items): ?>
<div class="clear"></div>
<div class="giftmessage-order-create">
    <div class="entry-edit">
        <div class="entry-edit-head">
            <h4 class="fieldset-legend head-gift-message"><?php echo Mage::helper('sales')->__('Gift Message') ?></h4>
        </div>
        <div class="fieldset">
            <div class="box-left">
                <?php if($this->helper('giftmessage/message')->getIsMessagesAvailable('main', $this->getQuote(), $this->getStoreId())): ?>
                    <div class="entire-order">
                        <h5><?php echo Mage::helper('sales')->__('Add a gift message for the <strong>entire order</strong>') ?></h5>
                        <?php echo $this->getFormHtml($this->getQuote(), 'main') ?>
                    </div>
                <?php endif; ?>
            </div>
            <div class="box-right">
                <?php if ($_items): ?>
                    <div class="each-order-item">
                        <h5 class="section-head"><?php echo Mage::helper('sales')->__('Add a gift message for <strong>each gift item</strong>') ?></h5>
                        <div class="scroll">
                            <?php foreach ($_items as $_item): ?>
                                <h6><?php echo $_item->getName() ?></h6>
                                <?php echo $this->getFormHtml($_item, 'item'); ?>
                            <?php endforeach; ?>
                        </div>
                    </div>
                <?php endif ?>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>
<?php endif; ?>

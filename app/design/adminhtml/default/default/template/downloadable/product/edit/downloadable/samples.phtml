                                    '<?php echo $this->getBrowseButtonHtml(); ?>'+
                                    '<?php echo $this->getDeleteButtonHtml(); ?>'+
                                    '<div id="downloadable_sample_{{id}}_file" class="uploader a-left">' +
                                        '<div id="downloadable_sample_{{id}}_file-old" class="file-row-info"></div>'+

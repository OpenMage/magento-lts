            <selector>.//*/input[@id = 'allow_gift_messages_for_items']|.//*/input[@id= 'allow_gift_options_for_items']</selector>
            <strategy>xpath</strategy>
            <input>checkbox</input>
        </allow_gift_options_for_items>
    </fields>
</mapping>
